    <script>
        // Script untuk menampilkan gambar ketika digulirkan ke layar
        document.addEventListener("DOMContentLoaded", function () {
            const images = document.querySelectorAll('#about img');
            const options = {
                threshold: 0.5
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, options);

            images.forEach(image => observer.observe(image));
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Ke Form -->
    <script>
        const scriptURL = 'https://script.google.com/macros/s/AKfycby-emmc2_Xxk83a8yOS6LR3rhMV6HuPO3-druntDwSZqNsU8Uh94CpYKfoC5UpNag5jbg/exec'
        const form = document.forms['gjpdm2023']
        const btnKirim = document.querySelector('.btn-kirim');
        const btnLoading = document.querySelector('.btn-loading');
        const myAlert = document.querySelector('.my-alert');

        form.addEventListener('submit', e => {
            e.preventDefault();

            // Ketika tombol kirim ditekan, sembunyikan tombol kirim dan tampilkan tombol loading
            btnKirim.classList.add('d-none');
            btnLoading.classList.remove('d-none');

            // Mengirimkan form data ke script Google Apps
            fetch(scriptURL, { method: 'POST', body: new FormData(form) })
                .then(response => {
                    console.log('Success!', response);
                    // Setelah berhasil, tampilkan alert sukses
                    myAlert.classList.remove('d-none');
                    form.reset(); // Reset form setelah pengiriman sukses
                })
                .catch(error => {
                    console.error('Error!', error.message);
                    // Jika ada error, kembali tampilkan tombol kirim
                    myAlert.classList.remove('d-none');
                })
                .finally(() => {
                    // Terlepas dari apakah berhasil atau gagal, tampilkan kembali tombol Kirim
                    btnKirim.classList.remove('d-none');
                    btnLoading.classList.add('d-none');
                });
        });
    </script>


